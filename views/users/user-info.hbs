                            <div id="oldPasswordAlert" style="margin-top: 10px;">
                                <p style=" color: red">Sai mật khẩu cũ</p>
                            </div>
                            <script>
                                $('#emailAlert').hide();
                                $('#editUserAlert').hide();
                                $('#newPasswordAlert').hide();
                                $('#passwordAlert').hide();
                                $('#oldPasswordAlert').hide();
                                const urlParams = new URLSearchParams(window.location.search);
                                const myParam = urlParams.get('error');
                                if (myParam == "Email already exist") {
                                    $('#emailAlert').show();
                                } else if (myParam == "User can not found") {
                                    $('#editUserAlert').show();
                                }else if (myParam == "Wrong new password") {
                                    $('#newPasswordAlert').show();
                                }else if (myParam == "Password not change") {
                                    $('#passwordAlert').show();
                                }else if (myParam == "Wrong old password") {
